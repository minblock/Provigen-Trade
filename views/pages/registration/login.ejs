<!DOCTYPE html>
<html lang="en">
    
    <% include ../../partials/head %>
  <body style="background-image: url(/backgroundpng.jpg); background-size: cover; height:100vh; background-repeat: no-repeat; ">

    <% include ../../partials/header %>

    <div class="container" style="border-top: solid 5px black;">
        <% include ../../partials/alerts %>
        <div class="row">
            <div class="offset2 col-md-6" style="margin: auto; margin-top: 10vh; text-align: center; padding: 0px;">
              <div style="width:50%; background-color: rgb(11, 12, 14); border: solid 2px black; padding: 3vh; margin: auto; min-width: 400px;">
              <h2 class="login-heading bold-text" style="margin-bottom: 2vh; color:whitesmoke"><%-__('Login')%></h2>
              <form class="login-form" method="post" action="/login"> 
                <% var redirect='/'; try{redirect=path_redirect}catch(e){}%>
                <input id='id_redirect' name='login_redirect' type='hidden' value='<%= redirect%>'>
                <fieldset> 
                  <div id="login_username" class="form-group">
                    <div class="controls ">
                      <input class="textinput textInput form-control" id="id_username" maxlength="100" name="username" placeholder="Username or email" type="text" required>
                    </div> 
                  </div> 
                  <div id="login_password" class="form-group">
                    <div class="controls "> 
                      <input class="textinput textInput form-control" id="id_password" name="password" placeholder="Password" type="password" required> 
                    </div> 
                  </div> 
                </fieldset>
                <div>
                    <div class="g-recaptcha" data-sitekey="<%- recaptcha%>" style="width:304px; margin:auto;"></div>
                    <div class="form-group"> 
                        <div class="controls "> 
                          <input name="submit" value="Login" class="btn btn-primary" id="submit-id-submit" style="margin-top: 1vh; background-color: rgb(11, 12, 14); border: solid 2px whitesmoke; width: 304px;" type="submit"> 
                        </div>
                    </div>
                    <a class="login-form-a" href="/password_reset"><%-__('Forgot your password?')%></a><br>
                    <div class="login-link">
                        <%-__('New to AbacusBit')%>&nbsp;<a href="/signup"><%-__('Sign up now!')%></a>
                    </div>
                </div> 
              </form>
            </div>
          </div>
        </div>

    </div> <!-- /container -->


    <% include ../../partials/footer %>
    <script src='/js/login.js'></script>
  </body>
</html>
